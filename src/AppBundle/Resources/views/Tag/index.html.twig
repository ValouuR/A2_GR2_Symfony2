{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Tag list</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a href="{{ path('tag_show', { 'id': tag.id }) }}">{{ tag.id }}</a></td>
                <td>{{ tag.name }}</td>
                <td><a href="{{ path('tag_show', { 'id': tag.id }) }}">Show</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {% endblock %}
